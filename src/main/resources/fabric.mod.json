{
	"schemaVersion": 1,
	"id": "ghostcraft",
	"version": "${version}",
	"name": "GhostCraft",
	"description": "The official GhostCraft mod.",
	"authors": [
		"klepticat",
		"chilliplier",
		"mortemos"
	],
	"contact": {
		"homepage": "https://klepticat.neocities.org/"
	},
	"license": "CC0-1.0",
	"icon": "assets/ghostcraft/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
          "org.klepticat.ghostcraft.GhostCraft"
		],
		"client": [
			"org.klepticat.ghostcraft.GhostCraftClient"
		],
		"cardinal-components": [
			"org.klepticat.ghostcraft.AllCardinalComponents"
		]
	},
	"mixins": [
