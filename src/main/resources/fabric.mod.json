		"bettercombat": "2.0.3+1.21.1",
		"playeranimator": "2.0.0-alpha1+1.21",
		"trinkets": "3.10.0"
	},

	"custom": {
		"cardinal-components": [
			"ghostcraft:totem_tracker",
			"ghostcraft:magic_type_tracker",
